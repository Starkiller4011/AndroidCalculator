<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:weightSum="1"
            android:orientation="vertical"
            android:background="@color/colorAccentMid">

            <TextView
                android:id="@+id/calc_txtEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="end|bottom"
                android:maxLength="20"
                android:paddingEnd="20dp"
                android:text="1234+5678"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="60sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/calc_txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="end|top"
                android:maxLength="20"
                android:paddingEnd="20dp"
                android:text="6912"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:weightSum="1"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:weightSum="1"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.16666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_shift"
                        style="@android:style/Widget.Holo.Button.Borderless.Small"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_shift"
                        android:textColor="@color/colorTextShift" />

                    <Button
                        android:id="@+id/scientific_button_inverse"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_inverse"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.16666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_alpha"
                        style="@android:style/Widget.Holo.Button.Borderless.Small"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_alpha"
                        android:textColor="@color/colorTextAlpha" />

                    <Button
                        android:id="@+id/scientific_button_ncr"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_ncr"/>

                </LinearLayout>

                <Button
                    android:id="@+id/scientific_button_dpad"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.33333333"
                    android:text="REPLAY"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.16666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_mode"
                        style="@android:style/Widget.Holo.Button.Borderless.Small"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_mode"/>

                    <Button
                        android:id="@+id/scientific_button_pol"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_pol"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.16666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_clr"
                        style="@android:style/Widget.Holo.Button.Borderless.Small"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_clr" />

                    <Button
                        android:id="@+id/scientific_button_cube"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/button_scientific_cube"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:weightSum="1"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.166666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_abc"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_abc"/>

                    <Button
                        android:id="@+id/scientific_button_neg"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_neg"/>

                    <Button
                        android:id="@+id/scientific_button_rcl"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_rcl"/>
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.166666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_sqrt"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_sqrt"/>

                    <Button
                        android:id="@+id/scientific_button_dot"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_dot"/>

                    <Button
                        android:id="@+id/scientific_button_eng"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_eng"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.166666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_square"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_square"/>

                    <Button
                        android:id="@+id/scientific_button_hyp"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_hyp"/>

                    <Button
                        android:id="@+id/scientific_button_Lbracket"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_Lbracket"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.166666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_power"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_power"/>

                    <Button
                        android:id="@+id/scientific_button_sin"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_sin"/>

                    <Button
                        android:id="@+id/scientific_button_Rbracket"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_Rbracket"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.166666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_log"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_log"/>

                    <Button
                        android:id="@+id/scientific_button_cos"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_cos"/>

                    <Button
                        android:id="@+id/scientific_button_comma"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_comma"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.166666666"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/scientific_button_ln"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_ln"/>

                    <Button
                        android:id="@+id/scientific_button_tan"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_tan"/>

                    <Button
                        android:id="@+id/scientific_button_memp"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.333333333"
                        android:text="@string/button_scientific_memp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:weightSum="1"
                android:orientation="horizontal"
                android:background="@color/colorPrimary">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:weightSum="1"
                    android:orientation="vertical">
                    
                    <Button
                        android:id="@+id/simple_button_7"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" 
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_7"/>

                    <Button
                        android:id="@+id/simple_button_4"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_4"/>

                    <Button
                        android:id="@+id/simple_button_1"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_1"/>

                    <Button
                        android:id="@+id/simple_button_0"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_0"/>
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/simple_button_8"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_8"/>

                    <Button
                        android:id="@+id/simple_button_5"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_5"/>

                    <Button
                        android:id="@+id/simple_button_2"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_2"/>

                    <Button
                        android:id="@+id/simple_button_decimal"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_decimal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/simple_button_9"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_9"/>

                    <Button
                        android:id="@+id/simple_button_6"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_6"/>

                    <Button
                        android:id="@+id/simple_button_3"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_3"/>

                    <Button
                        android:id="@+id/scientific_button_exp"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_scientific_exp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:background="@color/colorDelete">

                        <Button
                            android:id="@+id/scientific_button_del"
                            style="@android:style/Widget.Holo.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/button_scientific_del" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/simple_button_multiply"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_multiply"/>

                    <Button
                        android:id="@+id/simple_button_add"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_add"/>

                    <Button
                        android:id="@+id/scientific_button_ans"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_scientific_ans"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:background="@color/colorDelete">

                        <Button
                            android:id="@+id/scientific_button_ac"
                            style="@android:style/Widget.Holo.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/button_scientific_ac" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/simple_button_divide"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_divide"/>

                    <Button
                        android:id="@+id/simple_button_subtract"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_subtract"/>

                    <Button
                        android:id="@+id/simple_button_equals"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:text="@string/button_simple_equals"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>